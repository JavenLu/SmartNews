<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_news_one_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    >

    <LinearLayout
        android:id="@+id/pic_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3">

            <TextView
                android:id="@+id/content_text_view"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="摄影"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/news_information_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/content_text_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/author_name_one_pic_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="摄影" />


                <TextView
                    android:id="@+id/publish_time_from_now_one_pic_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="41分钟前" />

            </LinearLayout>
        </RelativeLayout>


        <ImageView
            android:id="@+id/image_view_one_pic_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="0.7"
             />
    </LinearLayout>


</RelativeLayout>